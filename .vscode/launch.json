{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  //
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Voorkant LVGL",
      "request": "launch",
      "type": "cppdbg",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "miDebuggerArgs": "--cd=${workspaceFolder}",
      "args": [
        "dashboard",
        "dashboard-test"
      ],
      "program": "${workspaceRoot}/${config:mesonbuild.buildFolder}/client-lvgl",
      "cwd": "${workspaceRoot}/${config:mesonbuild.buildFolder}",
      "environment": [
        {
          "name": "HA_API_TOKEN",
          "value": "BLANK"
        },
        {
          "name": "HA_WS_URL",
          "value": "ws://localhost:8123/api/websocket"
        },
      ],
      "stopAtEntry": false,
      "preLaunchTask": "Meson: Build all targets",
      "symbolOptions": {
        "searchPaths": [
          "${workspaceFolder}/${config:mesonbuild.buildFolder}",
        ],
        "searchMicrosoftSymbolServer": true,
        "cachePath": "${workspaceFolder}\\${config:mesonbuild.buildFolder}\\vscode-symbols-cache",
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": []
        }
      }
    }
  ]
}
